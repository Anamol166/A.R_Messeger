<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/maledefault"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/receiver_bg_chat"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/receiver_profile_image"/>

    <ImageView
        android:id="@+id/receiver_message_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/receiver_bg_chat"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/receiver_profile_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>
